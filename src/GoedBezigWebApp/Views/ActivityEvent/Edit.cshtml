@using GoedBezigWebApp.Models.ActivityEventViewModels
@model GoedBezigWebApp.Models.ActivityEventViewModels.EditActivityEventViewModel

@{
    ViewData["Title"] = Model.IsNew() ? "Create " + Model.GetTypeName() : "Edit " + Model.GetTypeName();
    Layout = "_pannel";
}

<h2>@ViewData["Title"]</h2>
<hr />

<form>
    <div class="form-group">
        <label for="Title">Title</label>
        <input type="text" class="form-control" id="Title" asp-for="Title" placeholder="Title" />
    </div>
    <div class="form-group">
        <label for="Description">Description</label>
        <textarea class="form-control" id="Description" asp-for="Description" rows="3" placeholder="Description"></textarea>
    </div>
    @if (Model.Type == EditActivityEventViewModel.ActivityType.Event)
    {
        <div class="form-group">
            <label for="Date">Date</label>
            <div class="input-group date">
                <div class="input-group-addon">
                    <i class="fa fa-calendar"></i>
                </div>
                <input type="date" class="form-control pull-right" id="Date" asp-for="Date" placeholder="Date" />
            </div>
        </div>
    }
</form>

@section scripts
{
    <script>
        $(document).ready(function () {
            $("#Date").datepicker({ autoclose: true, todayBtn: 'linked' });
        });
    </script>
}