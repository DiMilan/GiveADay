@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <ul class="dropdown-menu">
        <li class="nav-item">
            <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage" class="nav-link">
                <i class="fa fa-user-plus"></i>
                <span>Hello @UserManager.GetUserName(User)!</span>
            </a>
        </li>
        <li class="nav-item">
        <form asp-area="" asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm" class="navbar-right">
        <button type="submit" id="logoutForm" value="logoff" class="nav-link btn btn-alert">
                    <i class="fa fa-sign-in"></i>
            <span>Log off</span>
    </button>
          </form>      
        </li>
    </ul>

}
else
{
    <ul class="dropdown-menu">
        <li class="nav-item">
            <a asp-area="" asp-controller="Account" asp-action="Register" class="nav-link">
                <i class="fa fa-user-plus"></i>
                <span>Registreren</span>
            </a>
        </li>
        <li class="nav-item">
            <a asp-area="" asp-controller="Account" asp-action="Login" class="nav-link">
                <i class="fa fa-sign-in"></i>
                <span>Log in</span>
            </a>
        </li>
    </ul>
}
