@using GoedBezigWebApp.Models.UserViewModels
@model GoedBezigWebApp.Models.UserViewModels.UserViewModel
@{
    ViewData["Title"] = "Edit Profile";
    Layout = "~/Views/Shared/_pannel.cshtml";
}

<h2>@ViewData["Title"].</h2>
<p class="text-success">@ViewData["StatusMessage"]</p>

<div>
    <h4>Change your account settings</h4>
    <hr />
</div>
<div class="container" style="padding-top: 60px;">
    <div class="row">

        <div class="col-md-8 col-sm-6 col-xs-12 personal-info">

            <h3>Personal info</h3>
            <form asp-action="UpdateProfile" class="form-horizontal" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="form-group">
                        <label class="col-lg-3 control-label">First name:</label>
                        <div class="col-lg-8">
                            <input asp-for="FirstName" class="form-control fullWidth" />
                            <span asp-validation-for="FirstName" class="text-danger fullWidth"></span>
                        </div>
                    </div>
                </div><div class="row">
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Last name:</label>
                        <div class="col-lg-8">
                            <input asp-for="FamilyName" class="form-control fullWidth" />
                            <span asp-validation-for="FamilyName" class="text-danger fullWidth"></span>
                        </div>
                    </div>
                </div><div class="row">
                    <div class="form-group">
                        <label class="col-md-3 control-label">Email/Username:</label>
                        <div class="col-md-8">
                            <input asp-for="Username" class="form-control fullWidth" />
                            <span asp-validation-for="Username" class="text-danger fullWidth"></span>
                        </div>
                    </div>
                </div><div class="row">
                    <div class="form-group">
                        <label class="col-md-3 control-label">Password:</label>
                        <div class="col-md-8">
                            @if (Model.HasPassword)
            {
                                <a asp-controller="Manage" asp-action="ChangePassword" class="btn-bracketed">Change</a>
                            }
                            else
                            {
                                <a asp-controller="Manage" asp-action="SetPassword" class="btn-bracketed">Create</a>
                            }
                        </div>
                    </div>
                </div><div class="row">
                    <div class="form-group">
                        <label class="col-md-3 control-label"></label>
                        <div class="col-md-8">
                            <input type="submit" class="btn btn-primary" value="Save Changes">
                            <span></span>
                            <input class="btn btn-default" value="Cancel" type="reset">
                        </div>
                    </div>
                </div>
            </form>

        </div>
    </div>

</div>