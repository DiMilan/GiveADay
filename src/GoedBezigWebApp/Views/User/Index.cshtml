@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@model IEnumerable<GoedBezigWebApp.Models.User>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_pannel.cshtml";
}

<h2>@Localizer["Add Users To Group"]</h2>

@if (ViewBag.Group != null)
{
<p>@Localizer["Member of group:"] @ViewBag.Group</p>
<p>@Localizer["click to invite"]</p>
}
<p>
    @if (ViewBag.Group == null)
            {
        <br />
<p>@Localizer["Not registred"]</p>
    <a asp-action="../Group/Index">@Localizer["Register"] </a>
    }
   <!-- <a asp-action="Create">Create New</a> -->


<table class="table">
    <thead>
        <tr>
            <th>
               <!-- @Html.DisplayNameFor(model => model.UserName) -->
                @Localizer["Username"]
            </th>
            <th>
                <!--@Html.DisplayNameFor(model => model.FirstName) -->
                @Localizer["FirstName"]
            </th>
            <th>
               <!-- @Html.DisplayNameFor(model => model.FamilyName) -->
                @Localizer["FamilyName"]
            </th> 
            <th>
               @Html.DisplayNameFor(model => model.Email)                 
            </th>
            
            
           
            @*<th></th>*@
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>

                   
                    <p>
                  
                    @if (ViewBag.Group != null)
                    {
                     <a asp-action="InviteUser" asp-route-id="@item.UserName"> @Html.DisplayFor(modelItem => item.UserName) </a>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FamilyName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                


               
                
                @*<td>
                    <a asp-action="Edit" asp-route-id="@item.Id">@Localizer["Edit"]</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">@Localizer["Details"]</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">@Localizer["Delete"]</a>
                </td>*@
            </tr>
        }
    </tbody>
</table>
